<label class="control-label" for="{{field.controlID}}">
    {{input type='checkbox' id=field.controlID checked=field.value}}
    {{#if field.hasLabel}}
        {{field.label}}
    {{/if}}
</label>

{{#if field.hasErrorHint}}
    {{#if field.showError}}
    <span class="help-block">{{field.errorMessage}}</span>
    {{/if}}
{{/if}}
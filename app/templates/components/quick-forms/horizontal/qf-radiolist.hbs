<label class="col-sm-4 control-label" for="{{field.controlID}}">{{#if field.hasLabel}}{{field.label}}{{/if}}</label>

<div class="col-sm-8">
    {{#each field.contents as |item|}}
        <label class="control-label">
            {{input type='radio' class=field.controlID name=field.controlID value=item.id}}
            {{item.label}}
        </label>
    {{/each}}

    {{#if field.hasErrorHint}}
        {{#if field.showError}}
            <span class="help-block">{{field.errorMessage}}</span>
        {{/if}}
    {{/if}}
</div>
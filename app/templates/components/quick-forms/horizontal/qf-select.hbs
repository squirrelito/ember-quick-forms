<label class="col-sm-4 control-label" for="{{field.controlID}}">{{#if field.hasLabel}}{{field.label}}{{/if}}</label>

<div class="col-sm-8">
    <select class="form-control" id={{field.controlID}}>
      {{#if field.prompt}}
          <option disabled>
            {{field.prompt}}
          </option>
      {{/if}}

      {{#each field.contents as |item|}}
          <option value="{{item.id}}" selected={{item.checked}}>
            {{item.label}}
          </option>
      {{/each}}
    </select>

    {{#if field.hasErrorHint}}
        {{#if field.showError}}
            <span class="help-block">{{field.errorMessage}}</span>
        {{/if}}
    {{/if}}
</div>
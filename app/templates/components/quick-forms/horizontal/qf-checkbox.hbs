<label class="col-sm-8 col-sm-offset-4" for="{{field.controlID}}">
    {{input type='checkbox' id=field.controlID checked=field.value}}
    {{#if field.hasLabel}}
        {{field.label}}
    {{/if}}
</label>

{{#if field.hasErrorHint}}
    {{#if field.showError}}
    <span class="col-sm-8 col-sm-offset-4 help-block">{{field.errorMessage}}</span>
    {{/if}}
{{/if}}